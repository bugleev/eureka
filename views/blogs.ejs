<% include partials/header %>
  <div class="ui centered grid container-fluid main-grid" style="margin-top:2rem;">
    <div class="row">
      <h1 id="blogs-header">Blogs on &nbsp;
        <i class="diamond teal small icon"></i> Eureka Blogs
        <a href="/register">(Join us)</a> :</h1>
    </div>
    <% users.forEach((user) => { %>
      <div class="ui special cards" style=" margin-top: .875em;">
        <div class="card">
          <div class="blurring dimmable image">
            <div class="ui dimmer">
              <div class="content">
                <div class="center">
                  <a href="/blog/<%= user.blog_slug %>" class="ui inverted button">Visit Blog</a>
                </div>
              </div>
            </div>
            <img src="<%= user.blog_image %>" style="height: 290px;">
          </div>
          <div class="content">
            <div class="header" id="title_text">Blog:
              <span>
                <%= user.blog_name %>
              </span>
            </div>
            <div class="meta">
              <span class="date">
                <%= user.blog_description.substring(0, 25) %>...
              </span>
            </div>
          </div>
          <div class="extra content">
            <div class="right floated author">
              <span>author:
                <strong>
                  <%= user.username %>
                </strong>
                <img class="ui avatar image" src="https://www.w3schools.com/w3images/avatar2.png">
              </span>
            </div>
          </div>
        </div>
      </div>
      <% }) %>

  </div>
  <script>
    $('.special.cards .image').dimmer({
      on: 'hover'
    });
    $(".grid.main-grid").ready(() => {
      $('.grid.main-grid .special.cards').transition({
        animation: 'fade',
        duration: 400,
        interval: 100
      });
    });
  </script>

  <% include partials/footer %>